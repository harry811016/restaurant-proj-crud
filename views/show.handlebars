<!-- ./views/show.handlebars -->
<h1 class="mb-1 restaurant-show-title">{{restaurant.name}}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">
      <div class="row d-flex justify-content-start" id="show-edit back">
        <div class="ml-3 mr-3 mb-3">
          <form action="/restaurants/{{restaurant._id}}/edit" method="GET">
            <div class="input-group">
              <button class="btn btn-outline-secondary btn-xs" type="submit" id="edit-button">Edit</button>
            </div>
          </form>
        </div>
        <div class="mb-3">
          <form action="/" method="GET">
            <div class="input-group">
              <button class="btn btn-outline-secondary btn-xs" type="submit" id="back-button">Back</button>
            </div>
          </form>
        </div>
      </div>
      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2 fa-2x"></i>
          類別：
        </span>
        {{restaurant.category}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2 fa-2x"></i>
          地址：
        </span>
        {{restaurant.location}}
        <a href="{{restaurant.googleMap}}" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-lg"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2 fa-2x"></i>
          電話：
        </span>
        {{restaurant.phone}}
      </p>

      <p class="mb-5">
        {{restaurant.description}}
      </p>

      <img class="rounded mx-auto d-block mb-4 w-100" src="{{restaurant.image}}" alt="布娜飛比利時啤酒餐廳"
        style="max-width: 600px;">
    </div>
  </div>
</div>